{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/pngen/aigos/schemas/config.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Schema version (semver)"
    },
    "meshes": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "layers": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "enum": ["able", "are", "dio", "fak", "gsas", "icae", "icl", "jib", "poc", "zt-aas"]
              },
              "uniqueItems": true
            }
          },
          "required": ["layers"]
        }
      }
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "logging": {
          "type": "string",
          "enum": ["structured", "plaintext"],
          "default": "plaintext"
        },
        "restart": {
          "type": "string",
          "enum": ["on-failure", "never", "always"],
          "default": "on-failure"
        },
        "log_file": {
          "type": "string",
          "description": "Optional path to log file"
        }
      },
      "required": ["logging", "restart"]
    }
  },
  "required": ["meshes", "options"]
}